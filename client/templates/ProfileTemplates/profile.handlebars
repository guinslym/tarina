<div class="row">
    <div class="col s12 m4">
        <div class="card">
            <div class="card-image">
                <img src="{{profile_image}}" alt="Profile image">
                <span class="card-title profile-text">{{user.first_name}} {{user.last_name}}</span>
                {{#if can_edit}}
                    <a class="btn-floating btn-large halfway-fab waves-effect waves-light blue darken-3" href="#/profile/{{user.id}}/edit">
                        <i class="material-icons">mode_edit</i>
                    </a>
                {{/if}}
            </div>
            <div class="card-content">
                <p>{{user.username}}</p>
            </div>
        </div>
    </div>
</div>